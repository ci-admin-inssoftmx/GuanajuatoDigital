@model GuanajuatoAdminUsuarios.Models.AlertamientoGridModel

<section class=" bg-white rounded">
    <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
        <div class="col-auto pe-0">
            <div class="row align-items-center justify-content-center justify-content-md-start">
                <div class="col-auto pe-0">
                    <i class="h1 icon-editAws colorPrimary"></i>
                </div>
                <div class="col-auto my-3">
                    <h2 class="m-0 h3"><b>Editar Alertamiento</b></h2>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <div class="row">
                <div class="col-auto my-3">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="bg-light py-1"></div>
        </div>

    </div>
    <form id="EditarAplicaciones" class="row px-4 mb-4 align-items-end justify-content-center">
        <div class="row align-items-end">
            <div class="col-12 col-lg-6 my-4">
                <h5 class="px-4"><b>Datos de Alertamientos</b></h5>
                <h6 class="px-4 text-muted">Completa los datos obligatorios para guardar.</h6>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="controlForm my-3">
                   <label>Corporacion:</label>
                @Html.HiddenFor(m=>m.idAlertamiento)
                <p>@Model.Delegacion</p>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="controlForm my-3">
                    <label>Aplicada a:</label>
                <p>@Model.Aplicacion</p>
            </div>
        </div>
        <div class="form-group col-12 col-md-4 controlForm">
            <div class="controlForm my-3">
                <div class="input-group">
                    <label>Cantidad <b>(obligatorio)</b>:</label>

                    <input name="cantidad" id="cantidad" class="" value="@Model.Cantidad" onkeydown="validarNumero(event)" style="height: 3.6em;" />
                </div>
            </div>
        </div>


    </form>
    <div class="row my-4">
        <div class="col-12 col-md-6 mx-md-auto">
            <div class="row justify-content-around">
                <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0">
                    <button type="button" class="btn btnOutline btn-sm btnClose" data-bs-dismiss="modal" aria-label="Close">
                        <h6 class="m-0 px-3"><b>Cerrar</b></h6>
                    </button>
                </div>
                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                    <div class="controlButton">
                        <button class="btnPrimary px-3" onclick="editarService()">
                            <h5 class="m-0"><b>Guardar</b></h5>
                        </button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

<script>
    function editarService() {

        var Mydata = $("#EditarAplicaciones").serialize();
        var controlsValidate = [];
        var isValid = true;

        isValid = $("#cantidad").val()>0


        if (!isValid) {
            sitteg_warning('Hacen falta datos o existen datos incorrectos, favor de verificar.');
            return;
        }
        console.log(Mydata);
        showLoading();
        $.ajax({
            url: '@Url.Action("Ajax_EditarAlertamiento")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
                var grid = $("#gridCatWS").data("kendoGrid");
                grid.dataSource.read();
                $('#modalWS').modal('hide');
                $('#ModalBodyWS').empty();

                sitteg_success("Información guardada correctamente.");

                hideLoading();
            },
            error: function (error) {
                sitteg_warning('Sucedió un error, intente mas tarde...');
                hideLoading();
            }
        });
    }

</script>
