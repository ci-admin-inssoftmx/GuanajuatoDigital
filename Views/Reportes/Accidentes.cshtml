                //}
                ////AGREGAR
                //if (!auth.toString().includes("273")) {
                //    $("#btnNuevaGrua").prop('disabled', true).css({ "opacity": "0.3" });
                //}


            }
        } else {
            Swal.fire({
                icon: "error",
