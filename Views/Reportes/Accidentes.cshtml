</script>

<div class="mainContainer bg-light">
    <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
        <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
            <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                <div class="row align-items-center justify-content-center justify-content-md-start">
                    <div class="col-auto">
                        <i class="icon-pension h1 colorPrimary"></i>
                    </div>
                    <div class="col-auto my-3">
                        <h2 class="m-0 h3"><b>Reportes de Accidentes</b></h2>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="bg-light py-1"></div>
            </div>
        </div>
        <div class="col-12 col-md-auto mt-4 mb-2">
            <h5 class="px-4"><b>Búsqueda de reportes</b></h5>
            <h6 class="px-4 text-muted">Selecciona un reporte para su descarga.</h6>
        </div>
        <div class="row align-items-end px-4">
            <form id="seleccionReporte">
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                    <div class="controlForm my-3">
                        <label>Reporte:</label>
                        @(Html.Kendo().DropDownList()
                            .NoDataTemplate("No se encontraron datos")
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .Name("ddlReportes")
                            .OptionLabel("-- Seleccione --")
                            .HtmlAttributes(new { style = "width:100%;", id = "ddlIdReportesAccidentes" })
                            .Filter(FilterType.Contains)
                            .BindTo(ViewBag.ReportesAccidentes)
                            )

                    </div>
                </div>
            </form>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlForm my-3">
                    <div class="controlButton">
                        <button id="btnBucarReporte" class="btnPrimary" type="button" onclick="btnBuscarReporte()">  <h5 class="m-0"><b>Buscar</b></h5></button>

                    </div>
                </div>
            </div>
            @*//Aqui*@
        </div>
        <div id="reporeSeleccionadoAcc">
        </div>
    </section>
</div>
<script>



    function btnBuscarReporte() {
        var idReporte = $("#ddlIdReportesAccidentes").val();
        showLoading();
        $.ajax({
            url: '@Url.Action("ajax_BuscarReporteAccidentes")',
            type: 'POST',
            data: {
                "idReporte": idReporte,
            },
            dataType: "html",
            success: function (value) {
                $('#reporeSeleccionadoAcc').html(value);
                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        });
    }

</script>