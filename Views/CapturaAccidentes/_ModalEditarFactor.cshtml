@model GuanajuatoAdminUsuarios.Models.EditarFactorOpcionModel
<script>
    function factor() {
        var factorDDValue = $("#IdFactorAccidente").val();

        factorDDValue = factorDDValue ? factorDDValue : null;

        return {
            factorDDValue: factorDDValue
        };
    }
      function factoresChangeEdit() {
        var factorDDValue = $("#IdFactorAccidente").data("kendoDropDownList").value();
         showLoading();
         $.ajax({
             url: "/CapturaAccidentes/FactoresOpciones_Drop",
             type: "POST",
             data: { factorDDValue: factorDDValue },
             success: function (data) {
                 var IdOpcion = $("#IdFactorOpcionAccidente").data("kendoDropDownList");
                 console.log(data);
                 IdOpcion.dataSource.data(data);
                 hideLoading();
                 $("#IdOpcion").trigger("onFinishLoading");
             },
             error: function (xhr, status, error) {
                 hideLoading();
             }
         });
     }

    </script>
<section class=" bg-white rounded">
    <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
        <div class="col-auto pe-0">
            <div class="row align-items-center justify-content-center justify-content-md-start">
                <div class="col-auto pe-0">
                    <i class="icon-addClasificacionAccidente h1 colorPrimary"></i>
                </div>
                <div class="col-auto my-3">
                    <h2 class="m-0 h3"><b>Editar factor de accidente</b></h2>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <div class="row">
                <div class="col-auto my-3">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="bg-light py-1"></div>
        </div>

    </div>
    <div class="row">
        <div class="col-12 my-4">
            <h5 class="px-4"><b>Datos de factor de accidente</b></h5>
            <h6 class="px-4 text-muted">Completa los datos obligatorios para guardar.</h6>
        </div>
    </div>
    <form id="editarFactorForm" class="row px-4 mb-4 align-items-end justify-content-center">

        <div class="col-12 col-md-6 col-lg-4">
            <div class="controlForm my-3">
                <label>Factor accidente <b>(obligatorio)</b>:</label>
                <span>
                    @Html.HiddenFor(t => t.IdAccidenteFactorOpcion)

                    @(Html.Kendo().DropDownListFor(t => t.IdFactorAccidente).NoDataTemplate("No se encontraron datos")
                                .DataTextField("Text")
                                .DataValueField("Value")
                                .OptionLabel("Selecciona una Opción")
                                .Events(e => e.Change("factoresChangeEdit"))
                                .HtmlAttributes(new { style = "width:100%;" })
                        .Filter(FilterType.Contains)
                                .DataSource(source =>
                                {
                                    source.Read(read =>
                                    {
                                        read.Action("Factores_Drop", "CapturaAccidentes");
                                    });
                                }))
                </span>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="controlForm my-3">
                <label>Factor-Opción accidente <b>(obligatorio)</b>:</label>
                <span>
                    @(Html.Kendo().DropDownListFor(t => t.IdFactorOpcionAccidente).NoDataTemplate("No se encontraron datos")
                                .DataTextField("Text")
                                .DataValueField("Value")
                                .OptionLabel("Selecciona una Opción")
                                .HtmlAttributes(new { style = "width:100%;" })
                        .Filter(FilterType.Contains)
                                .DataSource(source =>
                                {
                                    source.Read(read =>
                                    {
                                read.Action("FactoresOpciones_Drop", "CapturaAccidentes").Data("factor");
                                    });
                                }))
                </span>
            </div>
        </div>
    </form>
    <div class="row my-4">
        <div class="col-12 col-md-6 mx-md-auto">
            <div class="row justify-content-around">
                <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0">
                    <button type="button" class="btn btnOutline btn-sm btnClose" data-bs-dismiss="modal" aria-label="Close">
                        <h6 class="m-0 px-3"><b>Cerrar</b></h6>
                    </button>
                </div>
                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                    <div class="controlButton" onclick="editarFactor()">
                        @(Html.Kendo().Button()
                                    .Name("EditarFactor")
                                    .HtmlAttributes(new { @class = "btnPrimary px-3" })
                                    .Content("<h5 class=\"m-0\"><b>Guardar</b></h5>"))
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>
<script>


   
    function editarFactor() {
        var controlsValidate = [];
        var isValid = true;

        controlsValidate = [];
        controlsValidate.push({ 'controlName': 'IdFactorAccidente' });
        controlsValidate.push({ 'controlName': 'IdFactorOpcionAccidente' });


        if (!isControlsValidDropDown(controlsValidate)) { isValid = false; }

        if (!isValid) {
            sitteg_warning('Hacen falta datos o existen datos incorrectos, favor de verificar.');
            return;
        }
        var Mydata = $("#editarFactorForm").serialize();
        showLoading();
        $.ajax({
            url: '@Url.Action("EditarValorFactorYOpcion")',
            type: 'POST',
            data: Mydata,
            success: function (data) {
                                if (!data.error) {

                $("#gridFactoresA").data("kendoGrid").dataSource.data(data);
                $('modal-body').removeClass('model-open');
                $('.modal-backdrop').remove();
                $('#factorAccidenteModal').modal('hide');
                sitteg_success("Se ha modificado la información");
            } else {
                sitteg_warning(data.error);
            }
                hideLoading();


            },
            error: function (error) {
                sitteg_warning('Sucedió un error, intente mas tarde...');
                hideLoading();
            }
        });
    }

