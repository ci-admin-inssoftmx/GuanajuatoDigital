    function buscarInvolucrado() {
        
        var licenciaBusqueda = $("#numeroLicenciaBusqueda").val().trim();
        var rfcBusqueda = $("#RFCBusqueda").val().trim();
        var curpBusqueda = $("#CURPBusqueda").val().trim();
        var nombreBusqueda = $("#nombreBusqueda").val().trim();
        var apellidoPaternoBusqueda = $("#apellidoPaternoBusqueda").val().trim();
       
        if (licenciaBusqueda !== "") {
            if (licenciaBusqueda.length < 10) {
                sitteg_warning("El número de licencia debe tener al menos 10 caracteres.");
                return;
            }
        }
        if (rfcBusqueda !== "") {
            if (rfcBusqueda.length < 10) {
                sitteg_warning("El RFC debe tener al menos 10 caracteres.");
                return;
            }
        }

        if (curpBusqueda !== "") {
            if (curpBusqueda.length < 10) {
                sitteg_warning("El CURP debe tener al menos 10 caracteres.");
                return;
            }
        }

        if ((nombreBusqueda !== "" || apellidoPaternoBusqueda !== "") &&
            (nombreBusqueda.length < 3 || apellidoPaternoBusqueda.length < 3)) {
            sitteg_warning("El nombre y el apellido paterno deben tener al menos 3 caracteres.");
            return;
        }
        var Mydata = $("#buscarInvolucradoForm").serialize();
        console.log("capturaBAccidente2:" + Mydata);
        var formData = $("#buscarInvolucradoForm").serializeArray();
        console.log("capturaBAccidente3:" + formData);
        // Aplica Trim a cada valor en formData
        $.each(formData, function (index, field) {
            field.value = $.trim(field.value);
        });

        // Convierte de nuevo a objeto
        var trimmedData = {};
        var findData = false;
        $.each(formData, function (index, field) {
            trimmedData[field.name] = field.value;
            if (!findData) {
                if (field.value != '' && field.value != undefined) {
                    findData = true;
                }
            }
        });


        showLoading();
         
        $.ajax({
            //url: '/CapturaAccidentes/BuscarPorParametro',
            url: '/CapturaAccidentes/BuscarPorParametroPaginado',
            type: 'POST',
            data: trimmedData,
            success: function (response) {
                console.log("RESP:",response)                
                if (response.tipo == "success") {
                    // Crear instancia del modelo con los datos recibidos
                    
                    console.log("resultado de busqueda: " + response.Data)
                                    
                    hideLoading();
                     
                     $('#modalLicenciasList').modal('show');
                    var grid = $("#gridPersonasLicencia").data("kendoGrid");
                       grid.dataSource.data(response.Data);
                       grid.dataSource._total = response.length;

                } else {
                    // Mostrar los resultados de personas encontradas en la búsqueda
                    if (response.encontrada == false) {
                        sitteg_warning("La búsqueda no arrojó resultados.");
                    } else {
                        if (response.tipo == "riag") {
                            var dataArray = response.Data;
                            var grid = $("#gridConductores").data("kendoGrid");
                            grid.dataSource.data(dataArray);
                           // grid.dataSource._total = dataArray.length;
                        } else {
                            sitteg_warning("La búsqueda no arrojó resultados.");
                        }
                    }
                }
                hideLoading();
            },
            error: function (error) {
                sitteg_warning('Ocurrió un error en la búsqueda.');
                hideLoading();
            }
        });
    }

    function mostrarModal(jsonData) {
        console.log("jsonData: " + jsonData)
        const modal = document.getElementById('modalLicencias');
        
