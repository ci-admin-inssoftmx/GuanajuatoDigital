                    <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                        <div class="controlForm my-3">
                            @(Html.Kendo().TextBoxFor(t => t.FolioBusqueda)
                                .Label(l => l.Content("Número de folio de formato G-01:"))
                                .Placeholder("Ingresa el número de folio G-01")
                                .HtmlAttributes(new { style = "width: 100%", id = "FolioBusqueda", name = "FolioBusqueda" })
                                )
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="tabCustomEnd"></div>
                    </div>
                </div>
            </div>
            <div class="tab-pane tabCustomConteiner fade" id="splaca-vehiculo" role="tabpanel" aria-labelledby="splaca-vehiculo-tab">
                <div class="row justify-content-center px-4 mt-4 pb-4 align-items-end">
                    <div class="col-12 col-md-6 mx-md-auto col-lg-4 mx-lg-0">
                        <div class="controlForm my-3">
                            <div class="controlButton my-3" onclick="crearSinPlaca()">

                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="tabCustomEnd"></div>
                    </div>
                </div>
            </div>
           
            
            
            
        </div>

    </form>
    <div class="row justify-content-center align-items-center">
        <div class="col-12 col-md-6 col-lg-4 text-center">
            <div class="controlButton my-3" onclick="busquedaVehiculo()">
