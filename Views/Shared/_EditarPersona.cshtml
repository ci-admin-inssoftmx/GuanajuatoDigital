        if (!isControlsValid(controlsValidate)) { isValid = false; }

        // DROP DOWN LIST
        controlsValidate = [];
        controlsValidate.push({ 'controlName': 'idGenero' });
        controlsValidate.push({ 'controlName': 'idCatTipoPersona' });
        if (!isControlsValidDropDown(controlsValidate)) { isValid = false; }

        if (email != "" && email != undefined) {
            $('#PersonaDireccion_correo').removeClass("errorData");
            if (!isValidEmail(email)) {
                $('#PersonaDireccion_correo').addClass("errorData");
                isValid = false;
            }
        }


        if (!isValid) {
            sitteg_warning('Hacen falta datos o existen datos incorrectos, favor de verificar.');
            return;
        }

        var formData = $("#frmEditarPersona").serialize();
        showLoading();
        $.ajax({
            url: '@Url.Action("ajax_EditarPersona","CapturaAccidentes")',
            type: 'POST',
            data: formData,
            success: function (result) {
                console.log("DFDF1", result)

                var grid = $("#gridConductores").data("kendoGrid");

                if (grid) {
                    grid.dataSource.read();
                } else if (result && result.data) {
              
                    $("#datosIniciales").hide();
                    $("#involucradoSeleccionado").show();
                    $("#IdPersona").text(result.data.IdPersona);
                    $("#nombreModal").text(result.data.nombre);
                    $("#apellidoPaternotxt").text(result.data.apellidoPaterno);
                    $("#apellidoMaternotxt").text(result.data.apellidoMaterno);
                    $("#rfcModal").text(result.data.RFC);
                    $("#curpModal").text(result.data.CURP);
                    $("#sexoModal").text(result.data.genero);
                    $("#fechaNacimientoModal").text(result.data.fechaNacimiento);
