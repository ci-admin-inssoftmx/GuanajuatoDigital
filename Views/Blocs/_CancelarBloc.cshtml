@{
    Layout = null;   
}
<section class=" bg-white rounded">
    <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
        <div class="col-auto pe-0">
            <div class="row align-items-center justify-content-center justify-content-md-start">
                <div class="col-auto pe-0">
                    <i class="icon-bloc h1 colorPrimary"></i>
                </div>
                <div class="col-auto my-3">
                    <h2 class="m-0 h3"><b>Cancelar bloc</b></h2>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <div class="row">
                <div class="col-auto my-3">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
            </div>
        </div>
    </div>
    <form id="CancelBlocForm" class="row px-4 mb-4 align-items-end justify-content-center">

        <div class="row">
            <div class="col-12">
                <div class="bg-light py-1"></div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-12 col-lg-6 my-4">
                <h5 class="px-4">Se cancelará el bloc: @ViewBag.NumeroSerie</h5>                
            </div>

        </div>
        <div class="row justify-content-center d-none">
            <div class="col-10 col-md-8">
                <h6 class="px-4"><b>Comentarios (obligatorio)</b></h6>
            </div>
        </div>
        <div class="row justify-content-center d-none">
            <div class="col-8 col-md-8">
                @(Html.Kendo().TextBox()
                    .Name("txComent")
                    .HtmlAttributes(new { style = "width: 100%;", @maxlength = "150", @class = "k-textbox"})
                    )                
            </div>
        </div>


    </form>

    <div class="row my-4">
        <div class="col-12 col-md-6 mx-md-auto">
            <div class="row justify-content-around">
                <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0">
                    <button type="button" class="btn btnOutline btn-sm btnClose" data-bs-dismiss="modal" aria-label="Close">
                        <h6 class="m-0 px-3"><b>Cerrar</b></h6>
                    </button>
                </div>
                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                    <div class="controlButton">
                        <button class="btnPrimary px-3" onclick="CancelBloc()">
                            <h5 class="m-0"><b>Guardar</b></h5>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {
        $("#CancelBlocForm").kendoValidator().data("kendoValidator");
    });

    function validateAndSubmitForm() {
        var validator = $("#CancelBlocForm").data("kendoValidator");
        if (validator.validate()) {
            CancelBloc();
        }
    }

    function CancelBloc() {
        var validator = $("#CancelBlocForm").data("kendoValidator");
        var isValid = validator.validate();
        if (!isValid) {
            return;
        }

        var blocId = '@ViewBag.BlocId';
        console.log( $('#txComent') );

        var comentario = $('#txComent').val();
        console.log(comentario);

        $('#CancelBloc').modal('hide');
        $('body').removeClass('model-open');
        $('.modal-ModalCancelBlo').remove();
       
        showLoading();
        var formData = new FormData();
        formData.append('registraId', blocId);
        formData.append('comment', comentario);
        
        $.ajax({
            url: '@Url.Action("CancelBlocModal", "Blocs")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (result) {
                sitteg_success('Se ha cancelado el bloc');
                var grid = $("#gridBlocs").data("kendoGrid");
                grid.dataSource.read();
                hideLoading();
            },
            error: function (error) {
                sitteg_warning('Sucedio um error, intente mas tarde...');
                hideLoading();
            }
        });
    }


</script>
