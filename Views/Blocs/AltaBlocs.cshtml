<script>  

    function GuardaBloc(e) {     
        showLoading();
        var flujo = $("#CatBlocs").data("kendoDropDownList").value();  
        //var idDeleg = $("#delegacion").data("kendoDropDownList").value();
        var folioi = $("#folioInicio").data("kendoNumericTextBox").value();
        var foliof = $("#foliofin").data("kendoNumericTextBox").value();
        //var deleg = $("#delegacion").data("kendoDropDownList").dataSource.data().filter(e => e.value == idDeleg)[0]?.text;


        if (!folioi || !foliof){
            sitteg_warning("falta agregar datos");
            hideLoading();
            return
        }

        if (parseInt(folioi) >= parseInt(foliof)){
            sitteg_warning("El folio inicial es mayor que el final");
            hideLoading();
            return
        }


        var data = {idflujo:flujo , idDelegacio:"0",folioInicio:folioi,folioFin:foliof,delegacion:""}
        

        $.ajax({
            url: '@Url.Action("GuardaBloc", "Blocs")',
            type: 'POST',            
            data: data,
            success: function (data) { 
                
                if (data.menaje){
                    sitteg_warning("Los folios se sobreponen");
                    return
                }

                sitteg_success('Bloc Agregado correctamente con  numero de serie: ' + data.Serie)
                var grid = $("#gridBlocs").data("kendoGrid");
                grid.dataSource.read();
                $("#folioInicio").data("kendoNumericTextBox").value(undefined);
                $("#foliofin").data("kendoNumericTextBox").value(undefined);
                
            },
            error: function () {
                sitteg_warning("Registro Agregado con errores");
            }
        })
        hideLoading();       
    }
        

</script>
