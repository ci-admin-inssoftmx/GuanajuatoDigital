<script>
    function tipoServicioDropDownChange() {
        var tipoServicioDDlValue = $("#idTipoServicio").data("kendoDropDownList").value();

        showLoading();
        $.ajax({
            url: "/Estadisticas/SubtipoServicio_Drop",
            type: "POST",
            data: { tipoServicioDDlValue: tipoServicioDDlValue },
