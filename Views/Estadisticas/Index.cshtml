<script>
    function submitSearch() {
        var Mydata = $("#frmBusquedaEstadisticasIncidencias").serialize();
        showLoading();
        $.ajax({
            url: '@Url.Action("GetInfraccionesGridBusqueda")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
                $("#estadisticasInfracciones3").html(result);

                $.ajax({
                    url: '@Url.Action("ajax_BusquedaIncidenciasInfracciones")',
                    type: 'POST',
                    data: Mydata,
                    success: function (result) {
                        $("#estadisticasInfracciones").html(result);
                        
                        $.ajax({
                            url: '@Url.Action("ajax_BusquedaParaMotivos")',
                            type: 'POST',
                            data: Mydata,
                            success: function (result) {
                                 $("#estadisticasInfracciones2").html(result);
                                hideLoading();
                            },
                            error: function () {
                                // Maneja errores
                                sitteg_warning("Ocurrió un error al actualizar el ViewBag.");
                                hideLoading();
                            }
                        });
                        
                    },
                    error: function () {
                        // Maneja errores
                        sitteg_warning("Ocurrió un error al procesar su solicitud.");
                        hideLoading();
                    }
                });
            },
            error: function () {
                // Maneja errores
                sitteg_warning("Ocurrió un error al actualizar el ViewBag.");
                hideLoading();
            }
        });
    }



    function startChange() {
        var endPicker = $("#end").data("kendoDatePicker"),
            startDate = this.value();

        if (startDate) {
            startDate = new Date(startDate);
            startDate.setDate(startDate.getDate() + 1);
            endPicker.min(startDate);
        }
    }

    function endChange() {
        var startPicker = $("#start").data("kendoDatePicker"),
            endDate = this.value();

        if (endDate) {
            endDate = new Date(endDate);
            endDate.setDate(endDate.getDate() - 1);
            startPicker.max(endDate);
        }
    }
    $(document).ready(function () {
        var datePicker = $("#FechaInicio").data("kendoDatePicker");
        datePicker.value(null);
    });
    $(document).ready(function () {
        var datePicker = $("#FechaFin").data("kendoDatePicker");
        datePicker.value(null);
    });
    function carreteraDropDownChange() {
        var carreteraDDValue = $("#idCarretera").data("kendoDropDownList").value();

        showLoading();
        $.ajax({
            url: "/Estadisticas/Tramos_Drop",
            type: "POST",
            data: { carreteraDDValue: carreteraDDValue },
            success: function (data) {
                var TramosDropDown = $("#idTramo").data("kendoDropDownList");
                TramosDropDown.dataSource.data(data);
                hideLoading();
                $("#idTramo").trigger("onFinishLoading");
            },
            error: function (xhr, status, error) {
                hideLoading();
            }
        });
    }
</script>