    var listaIdsPermitidosJson = @HttpContextAccessor.HttpContext.Session.GetString("IdsPermitidos").ToString();
    var autorizaciones = @HttpContextAccessor.HttpContext.Session.GetString("Autorizaciones").ToString();
}

<script>

    function delegacion(){
     var idDependencia = $("#idDependenciaFiltro").val();

        idDependencia = idDependencia ? idDependencia : null;

        return {
            idDependencia: idDependencia
        };
    }
     function delegacionFilter(){
     var idDependencia = $("#idDependenciaFiltro").val();

        idDependencia = idDependencia ? idDependencia : null;

        return {
            idDependencia: idDependencia
        };
    }
    $(document).ready(function () {
        var access = @listaIdsPermitidosJson;
        if (access != undefined && access != '') {
            if (!access.toString().includes(localStorage.getItem("menuId"))) {
                Swal.fire({
                    icon: "error",
                    title: "¡EL usuario no tiene acceso a esta opción!"
                });
                setTimeout(() => {
                    window.location.href = "/Principal";
                }, 200);
            }
        } else {
            Swal.fire({
                icon: "error",
                title: "¡EL usuario no tiene acceso a esta opción!"
            });
            setTimeout(() => {
                window.location.href = "/Principal";
            }, 200);
        }
    });

</script>
<div class="mainContainer bg-light">
    <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
        <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
            <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                <div class="row align-items-center justify-content-center justify-content-md-start">
                    <div class="col-auto">
                        <i class="icon-municipio h1 colorPrimary"></i>
                    </div>
                    <div class="col-auto my-3">
                        <h2 class="m-0 h3"><b>Catálogo de municipios</b></h2>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-7 col-xl-auto">
                <div class="row">
                    <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                        <button onclick="mostrarModalAgregarMunicipio()">
                            <h6 class="m-0 d-flex align-items-center"><i class="icon-addMunicipio h5 mb-0 me-2"></i><b>Agregar nuevo municipio</b></h6>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="bg-light py-1"></div>
            </div>
        </div>
        <div class="row px-4 mb-4 align-items-end">
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlForm my-3">
                    @(Html.Kendo().TextBoxFor(t => t.Municipio2)
                        .Label(l => l.Content("Nombre <b>(obligatorio)</b>:"))
                        .Placeholder("Ingresa el nombre del municipio")
                        .HtmlAttributes(new { style = "width: 100%" })
                        )

                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlForm my-3">
                    <label>Entidad <b>(obligatorio)</b>:</label>
                    <span>
                        @(Html.Kendo().DropDownListFor(t => t.IdEntidad2).Filter(FilterType.Contains).NoDataTemplate("No se encontraron datos")
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .OptionLabel("Selecciona una Entidad")
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("Entidades_Drop", "CatMunicipios").Data("delegacionFilter");
                                });
                            })
                            .HtmlAttributes(new { style = "width:100%;" })
                            )
                    </span>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlForm my-3">
                    <label>Delegación <b>(obligatorio)</b>:</label>
                    <span>
                        @(Html.Kendo().DropDownListFor(t => t.IdOficinaTransporte2).Filter(FilterType.Contains).NoDataTemplate("No se encontraron datos")
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .OptionLabel("Selecciona una Delegacion")
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("GetDelegaciones", "Catalogos").Data("delegacion");
                                });
                            })
                           
                            .HtmlAttributes(new { style = "width:100%;" })
                            )
                    </span>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlForm my-3">
                    <div class="controlButton">
                        <button class="btnPrimary" id="btnBuscar" type="button" onclick="submitSearchMunicipios()">  <h5 class="m-0"><b>Buscar</b></h5></button>
                    </div>
                </div>
            </div>

            <div class="col-12 mb-4 rounded gridCustom">
                <div class="row justify-content-between mb-1 titleCustom">
                    <div class="col-12 col-md-auto mt-4 mb-2">
                        <h5 class="px-4"><b>Listado de municipios</b></h5>
                        <h6 class="px-4 text-muted">Edita o elimina los municipios.</h6>
                    </div>
                </div>
                <div id="tablaMunicipios">
                    <partial name="_ListaMunicipios" model="Model.MunicipiosModel" />
                </div>
            </div>

        </div>
       </section>
</div>

