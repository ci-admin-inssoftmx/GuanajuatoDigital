            fecha: $('#FechaFin').val()
        };

        console.log(_data);

        showLoading();
        $.ajax({
            url: '/BusquedaAccidentes/ajax_BusquedaAccidentes',
            type: 'POST',
            data: _data,
            success: function (result) {
                $("#tablaBusquedaAccidentes").html(result);
                hideLoading();
            },
            error: function () {
                sitteg_warning("Ocurrió un error");
                hideLoading();
            }
        });
    }

    function downLoadPdfFiltered() {
            var Mydata = $("#busquedaAccidenteForm").serialize();
            var fileName = "ReporteGeneralAccidentes.pdf";
            showLoading();

            $.ajax({
                type: "POST",
                url: '@Url.Action("AccidentesGeneral","PDFGenerator")',
                data: Mydata,
                success: function (r) {
                    if(r.success){
                    try {
                        var bytes = Base64ToBytes(r.data);
                        var blob = new Blob([bytes], { type: "application/octetstream" });
                        var isIE = false || !!document.documentMode;

                        if (isIE) {
                            window.navigator.msSaveBlob(blob, fileName);
                        } else {
                            var url = window.URL || window.webkitURL;
                            link = url.createObjectURL(blob);
                            var a = $("<a />");
                            a.attr("download", fileName);
                            a.attr("href", link);
                            $("body").append(a);
                            a[0].click();
                            $("body").remove(a);
                        }
                    } catch (error) {
                        handleError(error);
                    }
                    }
                    else{
                        sitteg_warning(r.message);
                    }
                },
                error: function () {
                    handleError("Ocurrió un error, inténtelo de nuevo más tarde");
                },
                complete: function () {
                    hideLoading();
                }
            });
       
        //    sitteg_warning("El usuario no tiene permisos suficientes para esta acción.");
        //}
        //hideLoading();
    }


    function handleError(error) {
        console.error(error);
        hideLoading();
    }


