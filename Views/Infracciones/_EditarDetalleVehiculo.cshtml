@model InfraccionesModel


<hr />
<div class="row my-4 px-4 align-items-end">
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Placas:</label>&nbsp;@Model.placas*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.placas)
                .Label(l => l.Content("Placas:"))
                .Placeholder("Ingresa Placas")
                .HtmlAttributes(new { style = "width: 100%", id = "Vehiculo_placas", autocomplete="off" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Serie:</label>&nbsp;@Model.serie*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.serie)
                .Label(l => l.Content("Serie:"))
                .HtmlAttributes(new { style = "width: 100%", autocomplete="off" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Numero tarjeta:</label>&nbsp;@Model.tarjeta*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.tarjeta)
                .Label(l => l.Content("No. tarjeta:"))
                .Placeholder("Ingresa No. tarjeta")
                .HtmlAttributes(new { style = "width: 100%" })
                @*.Enable(false)*@
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            <label>Vigencia tarjeta:</label>
            @(Html.Kendo().DateTimePickerFor(t => t.Vehiculo.vigenciaTarjeta).Interval(1)
                @*.Min(DateTime.Now)*@
                .Label(l => l.Content("Vigencia tarjeta:"))
                .Format("dd/MM/yyyy")
                @*.Value("")*@
                .Culture("es-ES")
                .HtmlAttributes(new { style = "width: 100%"  })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            <label>Entidad de registro:</label>
            <span>
                @(Html.Kendo().DropDownListFor(t => t.Vehiculo.idEntidad).Filter(FilterType.Contains).NoDataTemplate("No se encontraron datos")
                    .DataTextField("Text")
                    .DataValueField("Value")
                    .OptionLabel("Seleccione Entidad...")
                    .HtmlAttributes(new { style = "width:100%;" })
                    .Filter(FilterType.Contains)
                    .Enable(false)
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("Entidades_Read", "Vehiculos");
                        });
                    }))
            </span>
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Marca:</label>&nbsp;@Model.marca*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.marca)
                .Label(l => l.Content("Marca:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Submarca:</label>&nbsp;@Model.submarca*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.submarca)
                .Label(l => l.Content("Submarca:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Tipo vehículo:</label>&nbsp;@Model.tipoVehiculo*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.tipoVehiculo)
                .Label(l => l.Content("Tipo vehículo:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Modelo:</label>&nbsp;@Model.modelo*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.modelo)
                .Label(l => l.Content("Modelo:"))
                .HtmlAttributes(new { style = "width: 100%", autocomplete="off" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            <label>Color:</label>
            <span>
                @(Html.Kendo().DropDownListFor(t => t.Vehiculo.idColor).Filter(FilterType.Contains).NoDataTemplate("No se encontraron datos")
                    .DataTextField("Text")
                    .DataValueField("Value")
                    .OptionLabel("Seleccione Color...")
                    .HtmlAttributes(new { style = "width:100%;" })
                    .Enable(false)
                    .Filter(FilterType.Contains)
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("Colores_Read", "Vehiculos");
                        });
                    }))
            </span>

        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Capacidad:</label>&nbsp;@(Model.capacidad != null ? Model.capacidad.ToString() : "-")*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.capacidad)
                .Label(l => l.Content("Capacidad:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Póliza:</label>&nbsp;@(Model.poliza != null ? Model.poliza.ToString() : "-")*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.poliza)
                .Label(l => l.Content("Póliza:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Carga:</label>&nbsp;@(Model.carga.HasValue ? (Model.carga.Value ? "Si" : "No") : "-")*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.cargaTexto)
                .Label(l => l.Content("Carga:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Otros:</label>&nbsp;@(Model.otros != null ? Model.otros.ToString() : "-")*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.otros)
                .Label(l => l.Content("Otros:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<label>Número económico:</label>*@
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.numeroEconomico)
                .Label(l => l.Content("Número económico:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="form-group col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm  my-3">
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.motor)
                .Label(l => l.Content("Motor:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
        <div class="controlForm my-3">
            @*<p>@Model.Persona.nombreCompleto</p>*@
            @Html.HiddenFor(t => t.Vehiculo.Persona.idPersona)
           
            @(Html.Kendo().TextBoxFor(t => t.Vehiculo.Persona.nombreCompleto)
                .Label(l => l.Content("Propietario:"))
                .HtmlAttributes(new { style = "width: 100%" })
                .Enable(false)
                )
        </div>
    </div>
    @if (ViewBag.EditarVehiculo != null)
    {
        @if (ViewBag.EditarVehiculo)
        {
            <div class="col-12 col-md-6 col-lg-3">
                <div class="controlForm my-3">
                    <button style="height:60px!important" class="btn btn-primary" id="btnSelect1" type="button" onclick="SeleccionarPropietario()">  <h5 class="m-0"><b>...</b></h5></button>
                </div>
            </div>
        }

    }

    @if (ViewBag.EditarVehiculo != null)
    {
        @if (ViewBag.EditarVehiculo)
        {
            <div class="col-12 col-md-6 col-lg-3" style="text-align:right!important">
               <!-- <div class="controlForm my-3">
                    <button class="btn btn-primary" id="btnEditarVehiculo" type="button" onclick="EditarVehiculo()">  <h5 class="m-0"><b>Editar datos de éste vehículo</b></h5></button>
                 </div>-->
            </div>
        }
    }
</div>
