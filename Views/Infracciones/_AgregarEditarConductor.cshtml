<script>


	$(document).ready(()=>{
		
	})



	function getListadoPersonasInfracciones() {
		$("#listadoPersonas").show();
		showLoading();
		$.ajax({
			type: "GET",
			url: '@Url.Action("ajax_listadoPersonasInfracciones")',
			success: function (data) {
				$("#listadoPersonas").html(data);
				hideLoading();
			}, error: function () {
				sitteg_warning("Ocurrio un error al procesar su solicitud.");
				hideLoading();
			}

		});
	}

	function mostrarModalAgregarConductor() {
		$.ajax({
			url: '@Url.Action("ajax_ModalCrearPersonaConductor","Infracciones")',
			type: 'GET',
			contentType: "application/json; charset=utf-8",
			dataType: "html",
			success: function (data) {
				$("#CerrarmodalCond").trigger("click");

				$('#modalBodyCrearPersona').html(data);
				$('#modalCrearPersona').modal('show');

			}
		});
	}
</script>