        </div>*@

    </form>
    <div class="row my-4">
        <div class="col-12 col-md-6 mx-md-auto">
            <div class="row justify-content-around">
                <div class="col-auto btnOutline my-2 mx-auto mx-xl-2 p-0">
                    <button type="button" class="btn btnOutline btn-sm btnClose" data-bs-dismiss="modal" aria-label="Close">
                        <h6 class="m-0 px-3"><b>Cerrar</b></h6>
                    </button>
                </div>
                <div class="col-auto btnOutline btnOutlinePrimary my-2 mx-auto mx-xl-2 p-0">
                    <div class="controlButton">
                        <button class="btn btnPrimary px-3" onclick="agregarSalario()">Guardar</button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>



<script>
    function agregarSalario() {
        var CORP = $("#idDependenciaFiltro").val();
        CORP = CORP ? CORP : null;

        $("#ProductForm").find('input[name="Corp"]').val(CORP);
        var controlsValidate = [];
        var isValid = true;

        controlsValidate.push({ 'controlName': 'Salario' });
        controlsValidate.push({ 'controlName': 'Fecha' });

        if (!isControlsValid(controlsValidate)) { isValid = false; }
       

        if (!isValid) {
            sitteg_warning('Hacen falta datos o existen datos incorrectos, favor de verificar.');
            return;
        }


        var Mydata = $("#ProductForm").serialize();
        console.log(Mydata);
        $('#addUdiSalario').modal('hide');
        $('body').removeClass('model-open');
        $('.modal-backdrop').remove();
        showLoading();
        $.ajax({
            url: '@Url.Action("CreatePartialModal")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
               var grid= $("#gridCatUmas").data("kendoGrid");
               grid.dataSource.read();
                sitteg_success('Se ha registrado la información exitosamente.');
                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        });
    }

</script>

