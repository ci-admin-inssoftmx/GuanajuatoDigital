   document.querySelectorAll(".drop-zone__input").forEach((inputElement) => {
    const dropZoneElement = inputElement.closest(".drop-zone");

    dropZoneElement.addEventListener("click", (e) => {
        inputElement.click();
    });

    inputElement.addEventListener("change", (e) => {
        if (inputElement.files.length) {
            updateFileName(dropZoneElement, inputElement.files[0]);
        } else {
            clearComponent(dropZoneElement);
        }
    });

    dropZoneElement.addEventListener("dragover", (e) => {
        e.preventDefault();
        dropZoneElement.classList.add("drop-zone--over");
    });

    ["dragleave", "dragend"].forEach((type) => {
        dropZoneElement.addEventListener(type, (e) => {
            dropZoneElement.classList.remove("drop-zone--over");
        });
    });

    dropZoneElement.addEventListener("drop", (e) => {
        e.preventDefault();
        dropZoneElement.classList.remove("drop-zone--over");

        if (e.dataTransfer.files.length) {
            inputElement.files = e.dataTransfer.files;
            updateFileName(dropZoneElement, e.dataTransfer.files[0]);
        }
    });
});

var dnamefale = document.getElementById("NameFile");

function clearComponent(dropZoneElement) {
    // Limpia el nombre del archivo
    $(dnamefale).empty();

    // Elimina o desactiva el SVG o cualquier otro elemento relacionado
    const svgImage = document.getElementById("svgImagent");
    if (svgImage) {
        svgImage.classList.remove("active");
    }

    // Opcional: Puedes agregar más lógica aquí para restablecer otros elementos
}

function updateFileName(dropZoneElement, file) {
    // Actualiza el nombre del archivo en el componente
    $(dnamefale).empty().append(file.name);

    // Activa el SVG o cualquier otro elemento relacionado
    const svgImage = document.getElementById("svgImagent");
    if (svgImage) {
        svgImage.classList.add("active");
    }
}

