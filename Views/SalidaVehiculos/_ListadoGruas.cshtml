<script>
    function quitData() {
        setTimeout(() => {
            var t = document.querySelector("span.k-pager-info.k-label")

            if (t.innerHTML == "No items to display") {
                t.innerHTML = ""
            }
        }, 500)

    }
</script>


<div class="row">
    <div class="col-12 mb-4 px-4 rounded gridCustom">

        @(
            Html.Kendo().Grid<GuanajuatoAdminUsuarios.Models.GruasSalidaVehiculosModel>()
            .Name("GruasAsignadasGrid")
            .Events(s => s.DataBound("quitData").DataBinding("quitData"))
            .Columns(columns =>
            {
                columns.Bound(c => c.idDeposito).Hidden();
                columns.Bound(c => c.idGrua).Hidden();
                columns.Bound(c => c.abanderamiento).Hidden();
                columns.Bound(c => c.arrastre).Hidden();
                columns.Bound(c => c.salvamento).Hidden();
                columns.Bound(c => c.grua).Title("Grúa").Width(50);
                columns.Bound(c => c.tipoGrua).Title("Tipo de grúa").Width(90);
                columns.Bound(c => c.costoTotalPorGrua).Title("Costo total").Width(90);
                columns.Template("<button type='button' data-bs-toggle='modal' class='w-100 btn'><h6 class='m-0 colorPrimary' onclick='editarCosto(event)'><i class='h5 icon-edit me-2'></i><b>Editar</b></h6></button>").Width(80);


            }).HtmlAttributes(new { style = "height:550px" })
            .Sortable()
            //.Groupable()
            .Scrollable()
            .Pageable()
            .DataSource(
            dataSource => dataSource
            .Ajax()
            .Read(read => read
            .Action("GetGruasAsignadas", "SalidaVehiculos"))
            .PageSize(5)
            .Model(model => model.Id(p => p.grua))

            )
            .NoRecords(s => s.Template("-"))
            .ToolBar(t => t.Search().Text("Buscar..."))
            .Search(s =>
            {
                s.Field(c => c.grua);
                s.Field(c => c.tipoGrua);

            })

            .Selectable(selectable => selectable.Mode(GridSelectionMode.Single)
            .Type(GridSelectionType.Row)
            )
            .Events(events => events.DataBound("replaceLegend").DataBinding("replaceLegend"))

            )

    </div>


    <div class="modal fade modalCustom" id="editarCostosModal" aria-labelledby="agregarVehiculoLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
               
                <div class="modal-body" id="ModalBodyCostosGrua">
                </div>
            </div>
        </div>
    </div>

</div>


<script>

    function cerraModal() {
        $('#editarCostosModal').modal('hide');
    }

    function editarCosto(event) {
        event.preventDefault();
        var grid = $("#GruasAsignadasGrid").data("kendoGrid");
        var row = $(event.target).closest("tr");
        var dataItem = grid.dataItem(row);
        var idDeposito = dataItem.idDeposito;
        var idGrua = dataItem.idGrua;
        showLoading();
        $.ajax({
            url: '@Url.Action("ModalCostosGrua", "SalidaVehiculos")',
            type: 'POST',
            data: { idDeposito: idDeposito, idGrua: idGrua },
            success: function (result) {

                $('#editarCostosModal').modal('show');
                $('#ModalBodyCostosGrua').html(result);

                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        })
    }


</script>
