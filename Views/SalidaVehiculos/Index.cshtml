
@model GuanajuatoAdminUsuarios.Models.SalidaVehiculosModel
@{
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
    var listaIdsPermitidosJson = @HttpContextAccessor.HttpContext.Session.GetString("IdsPermitidos").ToString();
    var autorizaciones = @HttpContextAccessor.HttpContext.Session.GetString("Autorizaciones").ToString();
}

<script>
    $(document).ready(function () {

        $("#busquedaSalidaForm").on('submit', (e) => {e.preventDefault() })

        var access = @listaIdsPermitidosJson;
        if (access != undefined && access != '') {
            if (!access.toString().includes(localStorage.getItem("menuId"))) {
                Swal.fire({
                    icon: "error",
                    title: "¡EL usuario no tiene acceso a esta opción!"
                });
                setTimeout(() => {
                    window.location.href = "/Principal";
                }, 200);
            }
        } else {
            Swal.fire({
                icon: "error",
                title: "¡EL usuario no tiene acceso a esta opción!"
            });
            setTimeout(() => {
                window.location.href = "/Principal";
            }, 200);
        }
    });

</script>
<div class="mainContainer bg-light">

<section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
    <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
        <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
            <div class="row align-items-center justify-content-center justify-content-md-start">
                <div class="col-auto">
                    <div class="border border-2 border-dark rounded-circle">
                        <h5 class="m-0 numberCard d-flex align-items-center justify-content-center">
                            <b>1</b>
                        </h5>
                    </div>
                </div>
                <div class="col-auto">
                    <i class="icon-accidentes h1 colorPrimary"></i>
                </div>
                <div class="col-auto my-3">
                    <h2 class="m-0 h3"><b>Salida de Vehículos</b></h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-8 pe-0">
            <div class="bgSuccess py-1"></div>
        </div>
        <div class="col-4 ps-0">
            <div class="bg-light py-1"></div>
        </div>
    </div>
    <div class="col-12 col-md-auto mt-4 mb-2">
        <h5 class="px-4"><b>Búsqueda de vehículos</b></h5>
    </div>
        <form id="busquedaSalidaForm" class="row px-4 mb-4 align-items-end">
        <div class="col-12">
            <div class="row align-items-end">
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                    <div class="controlForm my-3">
                        @(Html.Kendo().TextBoxFor(t => t.serie)
                                .Label(l => l.Content("No. de serie:"))
                                .Placeholder("Ingresa el número de serie")
                                .HtmlAttributes(new { style = "width: 100%"})
                                )
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                    <div class="controlForm my-3">
                        <label>Fecha de ingreso:</label>
                        <span>
                            @(Html.Kendo().DatePickerFor(t => t.fechaIngreso).Max(DateTime.Now)
                                    .Label(l => l.Content("Fecha:"))
                                    .Culture("es-ES")
                                    .HtmlAttributes(new { style = "width: 100%", title = "please enter date" })
                                    )
                        </span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                    <div class="controlForm my-3">
                        @(Html.Kendo().TextBoxFor(t => t.folioInventario)
                            .Label(l => l.Content("Folio de inventario:"))
                            .Placeholder("Ingresa el número folio")
                            .HtmlAttributes(new { style = "width: 100%" })
                            )
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                    <div class="controlForm my-3">
                        <label>Marca:</label>
                        <span>
                            @(Html.Kendo().DropDownListFor(t => t.idMarca).Filter(FilterType.Contains).NoDataTemplate("No se encontraron datos")
                        .Label(l => l.Content("Marca:"))
                        .HtmlAttributes(new { style = "width: 100%" })
                        .DataTextField("Text")
                        .DataValueField("Value")
                        .OptionLabel("Selecciona una Marca")
                        .DataSource(source =>
                        {
                            source.Read(read =>
                            {
                                    read.Action("Marcas_Read", "SalidaVehiculos");
                            });
                        })
                        .Filter(FilterType.Contains)
                        )
                        </span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                    <div class="controlForm my-3">
                        <label>No. de Placa:</label>
                        <span>
                            @(Html.Kendo().DropDownListFor(t => t.placa).Filter(FilterType.Contains).NoDataTemplate("No se encontraron datos")
                            .DataTextField("Text")
                            .DataValueField("Text")
                            .OptionLabel("Seleccione Placa...")
                            .HtmlAttributes(new { style = "width:100%;" })
                            .Filter(FilterType.Contains)
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("Placas_Read", "SalidaVehiculos");
                                });
                            }))
                        </span>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                    <div class="controlButton my-3" onclick="buscarIngreso()">
                        @(Html.Kendo().Button()
                    .Name("buscarVehiculo")
                    .HtmlAttributes(new { @class = "btnPrimary" })
                    .Content("<h5 class=\"m-0\"><b>Buscar</b></h5>"))
                    </div>
                </div>
            </div>
            </div>
    </form>
    
    <div>
        <partial name="_ListadoServicios" model="Model" />
        </div>
</section>
</div>

 <script>
    function buscarIngreso() {
        var Mydata = $("#busquedaSalidaForm").serialize();
        showLoading();
        $.ajax({
            url: '@Url.Action("ajax_BusquedaIngresos", "SalidaVehiculos")',
            type: 'POST',
            data: Mydata,
            success: (data) => {
                var grid = $("#gridBusquedaServiciosDeposito").data("kendoGrid");
                grid.dataSource.data(data);
                grid.dataSource.page(1);
                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        });
    }
 </script>