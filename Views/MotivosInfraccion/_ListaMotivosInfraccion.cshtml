@model List<CatMotivosInfraccionModel>
<script>
        function filtrosBusqueda() {
             var idDep = $("#idDependenciaFiltro").val();

        idDep = idDep ? idDep : null;
            return {
            Nombre: $("#txtPlacas").val(),
                Fundamento: $("#txtFundamento").val(),
                IdVigencia: $("#ddlVigencia").val(),
                InicioVigenciaDesde: $("#inicioVigenciaDesde").val(),
                InicioVigenciaHasta: $("#inicioVigenciaHasta").val(),
                FinVigenciaDesde: $("#FinVigenciaDesde").val(),
                FinVigenciaHasta: $("#FinVigenciaHasta").val(),
            idDep: idDep
