								.Pageable(p => p.Enabled(true))
								.Sortable()
								.Scrollable(scr => scr.Enabled(false))
								.DataSource(dataSource => dataSource
								.Ajax()
								.ServerOperation(false)
								.Aggregates(aggregates =>
								{
									aggregates.Add(p => p.cantidad).Sum();
								})
								)
								.Events(events => events.DataBound("replaceLegend").DataBinding("replaceLegend"))
								)
						</div>
					</div>
					<div class="row align-items-start my-4 px-4">
						<!-- Nueva fila para la gráfica -->
