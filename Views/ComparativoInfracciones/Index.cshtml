<script>
    function submitSearch() {
        var año1 = $("#año1").val()
        var año2 = document.getElementById("año2").value
        
        if (año1 === "" && año2 === "") {

            sitteg_warning("Debe ingresar años de busqueda.");
            return
        }
       
        var Mydata = $("#frmComparativoInfracciones").serialize();
        //console.log(Mydata);
        showLoading();
        $.ajax({
            url: '@Url.Action("ajax_ComparativoInfracciones")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
                $("#Resultados").html(result);
                console.log(result);
                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        });
    }
    
    $(document).ready(function () {
        var ele = document.querySelectorAll('.number-only');
        [].forEach.call(ele, function (el) {
            el.onkeypress = function (e) {
                if (e != undefined && e.target.value.length > 3)
                    return false;

				if (isNaN(String.fromCharCode(e.charCode)))
					return false;
			}
			el.onpaste = function (e) {
				e.preventDefault();
			}
		})
	});
    function carreteraDropDownChange() {
        var carreteraDDValue = $("#idCarretera").data("kendoDropDownList").value();

        showLoading();
        $.ajax({
            url: "/ComparativoInfracciones/Tramos_Drop",
            type: "POST",
            data: { carreteraDDValue: carreteraDDValue },
            success: function (data) {
                var TramosDropDown = $("#idTramo").data("kendoDropDownList");
                TramosDropDown.dataSource.data(data);
                hideLoading();
                $("#idTramo").trigger("onFinishLoading");
            },
            error: function (xhr, status, error) {
                hideLoading();
            }
        });
    }


    function tipoMotivoDropDownChange() {
        var idTipo = $("#idTipo").data("kendoDropDownList").value();
        showLoading();
        $.ajax({
            url: "/ComparativoInfracciones/TiposMotivos_Drop",
            type: "POST",
            data: { idTipo: idTipo },
            success: function (data) {
                var idTipoMotivo = $("#idTipoMotivo").data("kendoDropDownList");
                console.log(data);
                idTipoMotivo.dataSource.data(data);
                hideLoading();
                $("#idTipoMotivo").trigger("onFinishLoading");
            },
            error: function (xhr, status, error) {
                hideLoading();
            }
        });
    }

</script>