        <form id="AdminCatalogosform">
        <div class="row">
            <div class="col-12 mb-4 px-4 rounded gridCustom">

                <div class="row align-items-end px-4">
                    <div class="controlForm my-3 col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                            <label>Catálogo (obligatorio):</label>
                        @(Html.Kendo().DropDownListFor(t=>t.idCatalogo).NoDataTemplate("No se encontraron datos")
                            .Filter(FilterType.Contains)
                            .DataTextField("Text")
                            .DataValueField("Value")
                            .OptionLabel("Selecciona una catálogo")
                            .HtmlAttributes(new { @class = "CentradoList", style = "width:100%;", id = "idCatalogoFiltro" })
                            .DataSource(source =>

                            {
                                source.Read(read =>
                                {
                                            read.Action("DropCatalogos", "Catalogos");
                                });
                            }))
                    </div>
                            <div class="controlForm my-3 col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                                <label>Corporación (obligatorio):</label>
                            @(Html.Kendo().DropDownListFor(t => t.idDependencia).NoDataTemplate("No se encontraron datos")
                                    .Filter(FilterType.Contains)
                                    .DataTextField("Text")
                                    .DataValueField("Value")
                                    .OptionLabel("Selecciona una corporacion")
                                    .HtmlAttributes(new { @class = "CentradoList", style = "width:100%;", id = "idDependenciaFiltro" })
                                    .DataSource(source =>

                                    {
                                        source.Read(read =>
                                        {
                                                read.Action("CorporacionesDrop", "Catalogos");
                                        });
                                    }))
                            </div>
                 </div>
                 <div class="my-3 col-12 col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                        <div class="controlButton">
                            <button class="btnPrimary" type="button" onclick="submitSearch()">  <h5 class="m-0"><b>Buscar</b></h5></button>

                        </div>
                    </div>
            </div>
            </form>
                    
        </div>

        <div id="filtros">
                <partial name="_Filtros" />
         </div>
        <div id="tablaCatalogos">
        </div>
        <partial name="_Scripts" />


      

    </section>
</div>

<script>

    function submitSearch() {
        var controlsValidate = [];
        var isValid = true;

     
        controlsValidate = [];
        controlsValidate.push({ 'controlName': 'idCatalogoFiltro' });
        controlsValidate.push({ 'controlName': 'idDependenciaFiltro' });
        if (!isControlsValidDropDown(controlsValidate)) { isValid = false; }

        if (!isValid) {
            sitteg_warning('Hacen falta datos o existen datos incorrectos, favor de verificar.');
            return;
        }

        var idCatalogo = $('#idCatalogoFiltro').val();
        var idDependencia = $('#idDependenciaFiltro').val();
                showLoading();

        $.ajax({
            url: '@Url.Action("BuscarCatalogos", "AdminCatalogos")',
            type: 'POST',
            data: {
                idCatalogo: idCatalogo,
                idDependencia: idDependencia
            },
            success: function (result) {
                console.log(result)
                $('#tablaCatalogos').html(result);
                showFilters(idCatalogo, idDependencia)
                                hideLoading();

            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
                                hideLoading();

            }
        });
    }
    function showFilters(idCatalogo, idDependencia) {
         $.ajax({
            url: '@Url.Action("FiltrosCatalogo", "AdminCatalogos")',
            type: 'POST',
            data: {
                idCatalogo: idCatalogo,
                idDependencia: idDependencia

            },
            success: function (result) {
                console.log(result)
                $('#filtros').html(result);
                                hideLoading();

            },
            error: function (xhr, status, error) {
                console.error('Error:', error);
                                hideLoading();

            }
        });
    }

  $(document).ready(function() {
        $('#idDependenciaFiltro').change(function() {
            // Limpia el contenido de las vistas parciales y de la tablaCatalogos
            $('#filtros').empty();
            $('#tablaCatalogos').empty();
        });
    });

   
</script>