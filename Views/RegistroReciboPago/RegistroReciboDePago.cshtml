                    icon: "error",
                    title: "¡El usuario no tiene acceso a esta opción!"
                });
                setTimeout(() => {
                    window.location.href = "/Principal";
                }, 200);
            } else {
                // BUSCAR - CONSULTAR

            }
        } else {
            Swal.fire({
                icon: "error",
                title: "¡El usuario no tiene acceso a esta opción!"
            });
            setTimeout(() => {
                window.location.href = "/Principal";
            }, 200);
        }
    });

</script>

<div class="mainContainer bg-light">
    <section class="mx-md-3 mx-lg-4 mx-xl-5 bg-white boxShadow my-5 rounded">
        <div class="row align-items-center justify-content-between px-4 px-md-4 pt-3 pb-2">
            <div class="col-12 col-md-6 col-lg-5 col-xl-auto">
                <div class="row align-items-center justify-content-center justify-content-md-start">
                    <div class="col-auto">
                        <i class="icon-editRecibo h1 colorPrimary"></i>
                    </div>
                    <div class="col-auto my-3">
                        <h2 class="m-0 h3"><b>Registro de Recibo de Pago</b></h2>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="bg-light py-1"></div>
            </div>
        </div>
        <div class="col-12 col-md-auto mt-4 mb-2">
            <h5 class="px-4"><b>Registro de Recibo de pago</b></h5>
            <h6 class="px-4 text-muted">Realiza una búsqueda de infracciones y comprueba su pago.</h6>
        </div>
        <div class="row px-4 my-4 align-items-end">
            <form id="reciboPagoBusqueda" class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlForm my-3">
                    <span>
                        @(Html.Kendo().TextBoxFor(t=>t.folioInfraccion)
                            .Label(l => l.Content("Folio de Infracción:"))
                            .Placeholder("Ingresa el folio de la infracción")
                            .HtmlAttributes(new { style = "width: 100%" })
                            )
                    </span>
                </div>
                <div id="mensajeSinResultados" class="px-4" style="color:red"></div>

            </form>


            <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlButton my-3">
                    <button class="btnPrimary" type="button" id="btnBuscar"  onclick="buscarInfraccion()">  <h5 class="m-0"><b>Buscar</b></h5></button>

                    @* @(Html.Kendo().Button()
                    .Name("BuscarVehiculo")
                    .HtmlAttributes(new { @class = "btnPrimary" })
                    .Content("<h5 class=\"m-0\"><b>Buscar</b></h5>"))*@
                </div>
            </div>


        </div>
        <div class="row align-items-center justify-content-center">
            <div class="col-12 mb-4 px-4 rounded gridCustom">
                <div class="row justify-content-between mb-1 titleCustom">
                    <div class="col-12 col-md-auto mt-4 mb-2">
                        <h5 class="px-4"><b>Listado de infracción</b></h5>
                        <h6 class="px-4 text-muted">Selecciona una infracción.</h6>
                    </div>
                </div>
                <div id="listadoInfracciones">
                    <partial name="_ListadoBusquedaInfraccion" model="Model" />
                </div>
            </div>
        </div>
    </section>

    
<!--Modal de comprobacion-->

<div class="modal fade modalCustom" id="modalComprobacion"  aria-labelledby="ComprobacionLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body" id="BodyComprobacion">
            </div>
        </div>
    </div>
</div>
</div>


<script>
    function buscarInfraccion() {

        var Data = $("#reciboPagoBusqueda").serialize();
        console.log(Data);
        showLoading();
        $.ajax({
            url: '@Url.Action("ObtenerInfracciones")',
            type: 'POST',
            data: Data,
            success: function (result) {
                var grid = $("#gridRegistro").data("kendoGrid");

                if (result.length === 0) {
                    $('#mensajeSinResultados').text("La búsqueda no arrojó resultados.");
                    grid.dataSource.data([]);
                } else{
                    grid.dataSource.data(result);
                    grid.dataSource.page(0)
                    $('#mensajeSinResultados').text(" ");
                }
                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        })
    }
   



</script>
