                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("Delegaciones_Drop", "CatOficinasRenta").Data("delegacion");
                                });
                            })
                            )
                    </span>
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
                <div class="controlForm my-3">
                    <div class="controlButton">
                        <button class="btnPrimary" id="btnBuscar" type="button" onclick="submitSearchOfiRenta()">  <h5 class="m-0"><b>Buscar</b></h5></button>
                    </div>
                </div>
            </div>



            <div class="col-12 mb-4 px-4 rounded gridCustom">
                <div class="row justify-content-between mb-1 titleCustom">
                    <div class="col-12 col-md-auto mt-4 mb-2">
                        @*
                        <p><h5 class="px-4"><b>Listado oficinas rentas</b></h5></p>
