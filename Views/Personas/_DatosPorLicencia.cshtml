@model PersonaModel

<form id="frmCrearPersona" class="row px-4 mb-4 align-items-end justify-content-center">
    @Html.HiddenFor(m=> m.idPersona)
    <div class="row align-items-end my-2">
        <div class="col-12 col-md-6 col-lg-4 col-xl-3 col-xx-2">
