<script>
    function agregarHospital() {
        event.preventDefault();
        var CORP = $("#idDependenciaFiltro").val();
        CORP = CORP ? CORP : null;

        $("#agregarhospitalForm").find('input[name="Corp"]').val(CORP);
        var Mydata = $("#agregarhospitalForm").serialize();
        var controlsValidate = [];
        var isValid = true;

        controlsValidate.push({ 'controlName': 'NombreHospital' });

        if (!isControlsValid(controlsValidate)) { isValid = false; }

        if (!isValid) {
            sitteg_warning('Hacen falta datos o existen datos incorrectos, favor de verificar.');
            return;
        }

        $('#agregarHospital').modal('hide');
        $('body').removeClass('model-open');
        $('.modal-backdrop').remove();
        showLoading();
        $.ajax({
            url: '@Url.Action("AgregarHospital")',
            type: 'POST',
            data: Mydata,
            success: function (result) {
                var grid = $("#gridCatHospitales").data("kendoGrid");
                grid.dataSource.read();
                sitteg_success('Se ha actualizado la información');
                hideLoading();
            }, error: function () {
                sitteg_warning("Ocurrio un error al procesar su solicitud.");
                hideLoading();
            }
        });
    }
   
</script>